<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".pages.MainActivity"
    android:background="@drawable/mainactivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="15dp">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginBottom="10dp"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/logo2" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/login_username"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginBottom="5dp"
            android:hint="(Enter your email)"
            android:textColor="#F1E8E8"
            android:textColorHint="#F1E8E8" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/login_password"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:hint="(Enter your password)"
            android:textColor="#F1E8E8"
            android:textColorHint="#F1E8E8" />

        <TextView
            android:id="@+id/login_error"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#8C3D5B"
            android:onClick="clickOnLogin"
            android:text="Login" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            android:text="Create Client or Cook Account?"
            android:textColor="#F1E8E8" />

        <Button
            android:id="@+id/btn_reg_client"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#8C3D5B"
            android:onClick="clickOnRegisterAsClient"
            android:text="Register as Client" />

        <Button
            android:id="@+id/btn_reg_cook"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#8C3D5B"
            android:onClick="clickOnRegisterAsCook"
            android:text="Register as Cook" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>